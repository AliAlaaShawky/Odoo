        <template id="api_data_display_form" name="Edit TimeOff Form">
        <t t-call="portal.portal_layout">
            <div class="container">
                <h1>Edit Time Off</h1>
                <form action="/edit/timeoff" method="post">
                <div class="form-group">
                        <label for="employee_id">Employee Name</label>
                        <input type="text" name="employee_name" id="employee_id" class="form-control" t-att-value="user_name" readonly="readonly"/>
                    </div>
                    <div class="form-group">
                        <label for="ticket_id">TimeOff</label>
                        <input type="text" name="ticket_id" id="ticket_id" class="form-control" t-att-value="ticket_id" readonly="readonly"/>
                    </div>
                    <div class="form-group">
                        <label for="holiday_status_id">Leave Type</label>
                        <select name="holiday_status_id" id="holiday_status_id" class="form-control" >
                            <t t-foreach="leave_types" t-as="leave_type">
                                <option t-att-value="leave_type.id">
                                    <t t-esc="leave_type.name"/>
                                </option>
                            </t>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="request_date_from">Request Date From</label>
                        <input type="date" name="request_date_from" id="request_date_from" class="form-control" t-att-value="ticket.request_date_from" />
                    </div>
                    <div class="form-group">
                        <label for="request_date_to">Request Date To</label>
                        <input type="date" name="request_date_to" id="request_date_to" class="form-control" t-att-value="ticket.request_date_to" />
                    </div>
                     <div class="form-group">
                        <label for="half_day">Half Day</label>
                        <select name="half_day" id="half_day" class="form-control" >
                            <option value="">Full Day</option>
                            <option value="morning">Morning</option>
                            <option value="afternoon">Afternoon</option>
                        </select>
                        </div>
                    <div class="form-group">
                        <label for="name">Description</label>
                        <input type="text" name="name" id="name" class="form-control"  t-att-value="ticket.name"/>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </t>
    
</template>








